@{
  Layout ="_Layout";
}
@model Bakery.Models.Treat

<h3> Treat Details</h3>
<h4> Name : </h4>
<p>@Html.DisplayFor(m=>m.TreatName)</p>

@if(@Model.JoinEntities.Count == 0)
{
  <h3> None</h3>
}
else
{
  <h4>This Treat has the following treats</h4>
  <ul>
  @foreach(var join in @Model.JoinEntities )
  {
    <li> @join.Flavor.FlavorName</li>
    @using(Html.BeginForm("DeleteTreat","Treats"))
    {
      @Html.Hidden("joinId",@join.FlavorTreatId)
      <input type="submit" value="Delete flavor under this Treat"/>
    }
  }
  </ul>  
}
<p>@Html.ActionLink("Edit Treat","Edit",new{id=Model.TreatId})</p>
<p>@Html.ActionLink("Delete Treat","Delete",new{id=Model.TreatId})</p>
<p>@Html.ActionLink("Add a Flavor","AddFlavor",new{id=Model.TreatId})</p>