@{
  Layout = "_Layout";
}
@using Bakery.Models;

<p>@Html.ActionLink("Add New Treats","Create")</p>

@if(Model.Count == 0)
{
  <h3>No Treats have been added yet!</h3>
}
else
{
  <h3> Treats List:</h3>
  @foreach (Treat treat in Model)
  {
    <li>@Html.ActionLink($"{treat.TreatName}","Details",new{id= treat.TreatId})</li>
  }
}